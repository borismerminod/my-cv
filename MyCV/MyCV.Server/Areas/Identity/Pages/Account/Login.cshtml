@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 id="login-title">Use a local account to log in.</h1>
<form class="login-form" id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-group">
        <label asp-for="Input.Email" class="form-group-label">Email</label>
        <input asp-for="Input.Email" class="form-group-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password" class="form-group-label">Password</label>
        <input asp-for="Input.Password" class="form-group-input" autocomplete="current-password" aria-required="true" placeholder="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.RememberMe" class="form-group-label">
            <input asp-for="Input.RememberMe" id="login-remember-me" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <div class="form-group">
        <button id="login-submit" type="submit">Log in</button>
    </div>
    <div class="form-group">
        <p class="form-links">
            <a  asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p class="form-links">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
        <p class="form-links">
            <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
