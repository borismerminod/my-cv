@model MyCV.Server.Models.UserOBS
@{
    ViewData["Title"] = "Registration";
}
<h1 id="registration-title">@ViewData["Title"]</h1>
<form class="registration-form">
    <div class="form-group">
        <label class="form-group-label" asp-for=" Username"></label>
        <input class="form-group-input" asp-for="Username" />
        <span class="field-validation-error" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label class="form-group-label" asp-for="Mail"></label>
        <input class="form-group-input" asp-for="Mail" />
        <span class="field-validation-error" asp-validation-for="Mail"></span>
    </div>
    <div class="form-group">
        <label class="form-group-label" asp-for="Password"></label>
        <input class="form-group-input" asp-for="Password" />
        <span class="field-validation-error" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label class="form-group-label" asp-for="ConfirmedPassword"></label>
        <input class="form-group-input" asp-for="ConfirmedPassword" />
        <span class="field-validation-error" asp-validation-for="ConfirmedPassword"></span>
    </div>
    <div class="form-group">
        <input id="registation-submit" type="submit" value="submit"/>   
    </div>

</form>